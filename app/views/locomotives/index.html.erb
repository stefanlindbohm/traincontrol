<div class="mx-auto w-full max-w-lg p-4 flex flex-col space-y-4">
  <h1 class="p-1 font-medium text-center">Traincontrol</h1>

  <div class="flex flex-col space-y-1">
    <label class="uppercase text-sm font-medium">Locomotives</label>
    <ul class="border-y xs:border-x -mx-4 xs:mx-0 border-gray-200 xs:rounded-md divide-y divide-gray-200">
      <%- @locomotives.each_with_index do |locomotive, i| %>
      <li>
        <%= link_to locomotive.address, locomotive_path(i), class: "block px-4 py-1" %>
      </li>
      <%- end %>
    </ul>
  </div>
</div>
